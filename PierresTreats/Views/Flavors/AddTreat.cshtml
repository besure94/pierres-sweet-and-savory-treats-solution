@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor
@using PierresTreats.Models

<h2>Add a treat</h2>

<h4>Add a treat to this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  @Html.Label("Select treat")
  @Html.DropDownList("TreatId")
  <input type="submit" class="btn btn-primary" value="Add treat"/>
}

<p>@Html.ActionLink("Back to treat list", "Index")</p>